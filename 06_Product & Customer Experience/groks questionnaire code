    <script>
        function addTeammate() {
            const form = document.getElementById('onboardingForm');
            const div = document.createElement('div');
            div.className = 'teammate';
            div.innerHTML = '<input type="text" name="teammate" placeholder="e.g., Mike Johnson, mike@company.com, Project Manager">';
            form.insertBefore(div, form.lastElementChild);
        }

        function submitForm(event) {
            event.preventDefault();
            // Here, developers can add code to send data to backend (e.g., via fetch to API)
            alert('Form submitted! Your first brief is on its way.');
        }
    </script>
